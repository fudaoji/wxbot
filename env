;安装时把这个文件改成.env，并根据自身情况修改配置值，配置键不许更改
;是否开发模式
APP_DEBUG = true
APP_TITLE= WxBot
APP_NAME = wxbot
CACHE_TYPE=[cache_type]

[APP]
DEFAULT_TIMEZONE = Asia/Shanghai

;数据库配置
[DATABASE]
TYPE = mysql
HOSTNAME = [hostname]
DATABASE = [database]
USERNAME = [username]
PASSWORD = [password]
HOSTPORT = [port]
CHARSET = utf8mb4
PREFIX = [prefix]
DEBUG = false

;redis配置
[REDIS]
HOST=[redis_host]
PORT=[redis_port]

;memcache配置
[MEMCACHED]
HOST=[memcache_host]
PORT=[memcache_port]

[LANG]
DEFAULT_LANG = zh-cn
